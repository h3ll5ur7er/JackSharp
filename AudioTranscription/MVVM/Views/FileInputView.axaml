<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AudioTranscription.MVVM.Views.FileInputView">
  <StackPanel>
    <TextBlock>
      <Run Text="Audio File:" />
      <Run Text="{Binding Path}" />
    </TextBlock>
    <Button Command="{Binding Load}" Content="Load"/>
    <Button Command="{Binding Connect}" Content="Connect"/>
    <Button Command="{Binding Play}" Content="Play"/>
    <Button Command="{Binding Pause}" Content="Pause"/>
    <Button Command="{Binding Stop}" Content="Stop"/>
  </StackPanel>
</UserControl>
