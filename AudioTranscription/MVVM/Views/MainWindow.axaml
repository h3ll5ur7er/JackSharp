<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AudioTranscription.MVVM.Views.MainWindow"
        xmlns:v="clr-namespace:AudioTranscription.MVVM.Views"
        xmlns:vm="clr-namespace:AudioTranscription.MVVM.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        Title="AudioTranscription">
    <Design.DataContext>
      <vm:DesignMainWindowViewModel/>
    </Design.DataContext>

  <!--<Grid>
    <RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      </RowDefinitions>
    <Grid Grid.Row="0" Grid.Column="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
