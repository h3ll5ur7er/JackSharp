  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Grid.Column="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <Grid Grid.Row="0" Grid.Column="0">
          <ItemsControl ItemsSource="{Binding AudioSources}">
            <ItemsControl.DataTemplates>
              <DataTemplate DataType="vm:MicInputViewModel">
                <v:MicInputView DataContext="{Binding}" />
              </DataTemplate>
              <DataTemplate DataType="vm:FileInputViewModel">
                <v:FileInputView DataContext="{Binding}" />
              </DataTemplate>
            </ItemsControl.DataTemplates>
          </ItemsControl>
      </Grid>

      <Grid Grid.Row="0" Grid.Column="1">
        <ItemsControl ItemsSource="{Binding AudioOutputs}">
          <ItemsControl.DataTemplates>
            <DataTemplate DataType="vm:SpeakerOutputViewModel">
              <v:SpeakerOutputView DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:FileOutputViewModel">
              <v:FileOutputView DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="vm:NoOutputViewModel">
              <TextBlock Text="No output" />
            </DataTemplate>
          </ItemsControl.DataTemplates>
        </ItemsControl>
      </Grid>
    </Grid>
    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
      <TextBlock Text="Status"></TextBlock>
    </Grid>
  </Grid>
  
</Window>
