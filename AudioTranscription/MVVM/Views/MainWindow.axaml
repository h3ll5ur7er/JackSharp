      </Grid.ColumnDefinitions>

      <Grid Grid.Row="0" Grid.Column="0">
        Chat
      </Grid>

      <Grid Grid.Row="0" Grid.Column="1">
        Settings
      </Grid>
    </Grid>
    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
        Status
    </Grid>
